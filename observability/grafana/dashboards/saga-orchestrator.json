{
  "uid": "saga-orchestrator",
  "title": "SAGA Orchestrator Dashboard",
  "tags": [
    "saga",
    "orchestration",
    "observability"
  ],
  "timezone": "browser",
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "type": "stat",
      "title": "Traces started",
      "id": 1,
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 4,
        "h": 4
      },
      "targets": [
        {
          "expr": "sum(saga_instances_started_total{saga_name=\"booking_saga\"})",
          "legendFormat": "Started",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "text-muted",
                "value": null
              },
              {
                "color": "blue",
                "value": 1
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Traces Completed Successfully",
      "id": 2,
      "gridPos": {
        "x": 4,
        "y": 0,
        "w": 4,
        "h": 4
      },
      "targets": [
        {
          "expr": "sum(saga_completed_total{saga_name=\"booking_saga\"})",
          "legendFormat": "Completed",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "text-muted",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Traces Completed Compensated",
      "id": 3,
      "gridPos": {
        "x": 8,
        "y": 0,
        "w": 4,
        "h": 4
      },
      "targets": [
        {
          "expr": "sum(saga_compensated_total{saga_name=\"booking_saga\"})",
          "legendFormat": "Compensated",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "text-muted",
                "value": null
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Traces Pending",
      "id": 4,
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 4,
        "h": 4
      },
      "targets": [
        {
          "expr": "sum(saga_instances_started_total{saga_name=\"booking_saga\"}) - (sum(saga_completed_total{saga_name=\"booking_saga\"}) + sum(saga_compensated_total{saga_name=\"booking_saga\"}))",
          "legendFormat": "Active Sagas",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "text-muted",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "gauge",
      "title": "Booking success rate (%)",
      "id": 5,
      "gridPos": {
        "x": 16,
        "y": 0,
        "w": 4,
        "h": 4
      },
      "targets": [
        {
          "expr": "(sum(saga_completed_total{saga_name=\"booking_saga\"}) / sum(saga_instances_started_total{saga_name=\"booking_saga\"})) * 100",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 10
              }
            ]
          },
          "max": 100,
          "min": 0
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Kafka Consumer Lag",
      "id": 6,
      "gridPos": {
        "x": 20,
        "y": 0,
        "w": 4,
        "h": 4
      },
      "targets": [
        {
          "expr": "sum(kafka_consumer_fetch_manager_records_lag) or vector(0)",
          "legendFormat": "Messages Behind",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "messages",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 50 },
              { "color": "red", "value": 200 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Saga Step Duration (p50)",
      "id": 11,
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 8,
        "h": 10
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(saga_step_duration_seconds_bucket{job=\"$microservice\"}[5m])) by (le, saga_name, step))",
          "legendFormat": "p50 {{step}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "red",
                "value": 3
              }
            ]
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "all"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Saga Step Duration (p95)",
      "id": 12,
      "gridPos": {
        "x": 8,
        "y": 4,
        "w": 8,
        "h": 10
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(saga_step_duration_seconds_bucket{job=\"$microservice\"}[5m])) by (le, saga_name, step))",
          "legendFormat": "p95 {{step}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "red",
                "value": 3
              }
            ]
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "all"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Saga Step Duration (p99)",
      "id": 13,
      "gridPos": {
        "x": 16,
        "y": 4,
        "w": 8,
        "h": 10
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(saga_step_duration_seconds_bucket{job=\"$microservice\"}[5m])) by (le, saga_name, step))",
          "legendFormat": "p99 {{step}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 1
              },
              {
                "color": "red",
                "value": 3
              }
            ]
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "all"
        }
      }
    },
    {
      "type": "gauge",
      "title": "Average Step Duration",
      "id": 21,
      "gridPos": {
        "x": 0,
        "y": 14,
        "w": 24,
        "h": 6
      },
      "targets": [
        {
          "expr": "sum(rate(saga_step_duration_seconds_sum{job=\"$microservice\"}[5m])) by (step) / sum(rate(saga_step_duration_seconds_count{job=\"$microservice\"}[5m])) by (step)",
          "legendFormat": "{{step}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "min": 0,
          "max": 0.02,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.01
              },
              {
                "color": "red",
                "value": 0.015
              }
            ]
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ]
          },
          "orientation": "auto",
          "textMode": "value_and_name"
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "microservice",
        "label": "Microservice",
        "query": "label_values(jvm_memory_used_bytes, job)",
        "type": "query",
        "datasource": "prometheus",
        "allValue": null,
        "current": {},
        "hide": 0,
        "includeAll": false,
