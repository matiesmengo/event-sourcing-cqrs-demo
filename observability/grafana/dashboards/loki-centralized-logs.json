{
  "uid": "loki-centralized-logs",
  "title": "Loki - Centralized Logs",
  "tags": [
    "logs",
    "infrastructure"
  ],
  "timezone": "browser",
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "type": "logs",
      "title": "Microservices Live Logs",
      "id": 1,
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 20
      },
      "datasource": "loki",
      "targets": [
        {
          "expr": "{job=\"services\", service=~\"$service\", level=~\"$level\"} | json | line_format \"{{.level}} \\t [{{.traceId}}] \\t {{.logger_name}} \\t: {{.message}}\" |~ \"(?i)$search\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      },
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "level"
            },
            "properties": [
              {
                "id": "mappings",
                "value": [
                  {
                    "type": "value",
                    "options": {
                      "ERROR": {
                        "color": "red",
                        "index": 0
                      }
                    }
                  },
                  {
                    "type": "value",
                    "options": {
                      "WARN": {
                        "color": "orange",
                        "index": 1
                      }
                    }
                  },
                  {
                    "type": "value",
                    "options": {
                      "INFO": {
                        "color": "green",
                        "index": 2
                      }
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "service",
        "label": "Service",
        "type": "query",
        "datasource": "loki",
        "query": "label_values({job=\"services\"}, service)",
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "refresh": 1
      },
      {
        "name": "level",
        "label": "Level",
        "type": "query",
        "datasource": "loki",
        "query": "label_values({job=\"services\"}, level)",
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "refresh": 1
      },
      {
        "name": "search",
        "label": "Regex Search",
        "type": "textbox",
        "defaultValue": ""
      }
    ]
  }
},
"editable": true,
"schemaVersion": 36,
"version": 1
}
