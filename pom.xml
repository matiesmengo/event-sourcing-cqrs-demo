        <module>mengo-platform/mengo-starters/postgresql-starter-test</module>

        <!-- Registry -->
        <module>schemas-registry</module>

        <!-- APIs -->
        <module>booking-service-api</module>

        <!-- Services -->
        <module>booking-service</module>
        <module>payment-service</module>
        <module>product-service</module>

        <!-- Test -->
        <module>e2e-tests</module>
    </modules>
</project>
